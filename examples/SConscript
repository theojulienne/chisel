Import( 'env', 'CHISEL_LIBS' )

env = env.Clone( )
env.Append( LIBS=['chisel-ui', 'chisel-graphics', 'chisel-text', 'chisel-core'] )
env.Append( FRAMEWORKS=['OpenGL'] )

EXAMPLES = [
	'helloworld',
	'canvas',
	'fonts',
	'glcube',
	'strings',
	'starfield',
	'widgets',
]

for example in EXAMPLES:
	prog = env.Program( example+'.d' )
	Depends( prog, CHISEL_LIBS )